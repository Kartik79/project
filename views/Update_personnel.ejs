    from {
        transform: rotate(0deg);
    }
    to {
        transform: rotate(359deg);
    }
}
#logo {
    height: 17vh;
    width: 10vw;
    background: transparent;
}
#Head {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    height: 17vh;
    width: 100%;
}
label {
  font-size: 150%;
  background: transparent;
}
label[for="mp_id"],
label[for="batallion_no"],
label[for="bdate"],
label[for="mobile"],
label[for="sex"] {
  font-size: 120%;
}
h1 {
    display: grid;
    place-items: center;  
    height: 17vh;
    width: 80vw;
    font-size: 7vh;
    background-color: rgba(236, 239, 211, 0.911);
}
#body {
    display: grid;
    place-items: center;
    height: 85vh;
    background-image: url("https://img.freepik.com/free-vector/indian-republic-day-tricolor-theme-watercolor-texture-background-vector_1055-11985.jpg?w=2000");
    background-size: cover;
}
.box {
  display:grid;
  place-items: center;
  background: transparent;
}
#container {
  display: grid;
  place-items: center;
  background: transparent;
  color: rgb(15, 14, 14);
  height: 90vh;
  width: 40vw;
}
#user {
  font-size: 200%;
  background: transparent;
}
input[type="int"], 
input[type="text"], 
input[type="date"],
input[type="tel"] {
  height: 5vh;
  width: 75%;
  background: rgb(239, 216, 150);
}
#mp_id,
#batallion_no,
#bdate,
#mobile,
#gear_serial,
#no_gear {
  height: 5vh;
  width: 25%;
  background: rgb(239, 216, 150);
} 
button {
  background: transparent;
  height: 5vh;
  width: 5vw;
}
</style>
</html>